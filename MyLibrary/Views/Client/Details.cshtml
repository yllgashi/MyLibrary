@model MyLibrary.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
    </dl>
</div>

@* Book rents *@
<div>
    <h4>Book rents</h4>
    <hr />
    <dl class="row">
        @foreach (BookRent item in Model.BookRents)
        {
            <dt class="col-sm-2">
                Book
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Book.Title)
            </dd>
        }
    </dl>
</div>

@* Client payed offers *@
<div>
    <h4>Payed offers</h4>
    <hr />
    <dl class="row">
        @foreach (ClientOffer item in Model.ClientOffers)
        {
            <dt class="col-sm-2">
                Offer
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Offer.Description)
            </dd>
            <dt class="col-sm-2">
                Agreement date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.AgreementDate)
            </dd>
        }
    </dl>
</div>


<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClientId }) |
    <a asp-action="Index">Back to List</a>
</div>
