@model IEnumerable<MyLibrary.Models.Client>

@{
    ViewData["Title"] = "Client";
}

<link rel="stylesheet" href="~/css/author-index.css">

<div class="container">
    <h1 class="d-md-inline-flex">Client</h1>
    <p class="d-sm-inline" style="margin-left:59%; ">
        <a class="btn btn-secondary btn-md active" role="button" asp-area="" asp-controller="Client" asp-action="Create" style="margin-left: 50px;
        margin-bottom: 10px;">Create New</a>
    </p>
</div>
<hr style="box-shadow:2px 2px 10px #23153d">
@* search form *@
<form method="post">
    <div class="input-group mb-3 col-5">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Find:</span>
        </div>
        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="keyword" id="keyword">
        <input type="submit" asp-action="Index" class="btn btn-info" value="Find" />
    </div>
</form>
<br />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="authors">
                    <div class="pic">
                        <img src="../img/author.jpg" class="img-fluid">
                        <ul class="social">
                            <li><a href="" class="fa fa-facebook"></a></li>
                            <li><a href="" class="fa fa-instagram"></a></li>
                            <li><a href="" class="fa fa-linkedin"></a></li>
                        </ul>
                    </div>
                    <div class="author-content">
                        <h3 class="title" id="title">   @Html.DisplayFor(modelItem => item.FirstName)   @Html.DisplayFor(modelItem => item.LastName)</h3>
                        <span class="post">@Html.DisplayFor(modelItem => item.BirthDate)</span>
                    </div>
                    <div class="mb-2">
                        <button class="btn text-light">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ClientId })
                        </button>
                        <button class="btn">
                            @Html.ActionLink("Details", "Details", new { id = item.ClientId })
                        </button>
                        <button class="btn">
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClientId })
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript" src="jquery.dataTables.js"></script>
<script type="text/javascript" src="sum().js"></script>