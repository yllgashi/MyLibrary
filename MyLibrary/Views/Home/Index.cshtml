@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <style>
        .carousel {
            transition-delay: 6s;
        }
    </style>


</head>


<body>
    <h1 class="display-4 text-center m-4" >My Library</h1>
    <div class="row">

        <div class="col-8 carousel slide" id="carouselExampleSlidesOnly" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="width:100%; height:350px;margin:0">
                    <img class="d-block w-100" src="~/img/header1.png" alt="First slide">
                </div>
                <div class="carousel-item" style="width:100%; height:350px;margin:0">
                    <img class="d-block w-100" src="~/img/header2.png" alt="Second slide">
                </div>
            </div>
        </div>

        <div class="col-4 float-right">

            <h2>The easiest way to find a book.</h2>
            <p style="padding-top:20px;">
                MyLibrary is a leading retailer of books, with a vast range of books from academic, popular and professional publishers.
            </p>
        </div>
    </div>
    <div>

    </div>
</body>
</html>

