@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <link rel="stylesheet" type="text/css" href="slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="slick/slick-theme.css" />
</head>
<body>

    <div class="row">
        <h1 class="display-4 d-inline pr-5 m-4" style="        border-right: solid 1px #23153d;">My Library</h1>
        <h1 class="col-7 d-inline" style="font-weight: normal; font-size:43px; padding-top:40px;">The easiest way to find a book!</h1>
        <hr>
    </div>

    <div class="row mt-3">
        <div class="col-8">
            <img src="~/img/header2.png" alt="image" class="img-fluid" />
        </div>
        <div class="col-4 float-right" style="border:solid #23153d 1px;border-radius:10px;">
            <p style="padding-top:20px; font-size:20px">
                MyLibrary is a leading retailer of books, with a vast range of books from academic, popular and professional publishers.
            </p>
            <p style="padding-top:20px; font-size:20px"> Access the library anytime, anywhere.</p>
            <p style="padding-top:20px; font-size:20px">Using 'My Library' you can: Have easy acess to your library account; Search and renew items online.</p>

        </div>
    </div>
  
    <div class="carousel m-3">
        <div class="container">
            <div class="row blog">
                <div class="col-md-12">
                    <div id="blogCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row ">
                                    <div class="col-md-3">
                                        <img src="~/img/nw.jpg" alt="Image" style="max-width:100%;height:270px">
                                    </div>
                                    <div class="col-md-3">
                                        <img src="~/img/WE.jpg" alt="Image" style="max-width:100%;height:270px">
                                    </div>
                                    
                                        <div class="col-md-3">
                                            <img src="~/img/KFSH.jpg" alt="Image" style="max-width:100%;height:270px">
                                        </div>
                                        <div class="col-md-3">
                                            <img src="~/img/LOF.jpg" alt="Image"class="img-fluid" style="max-width:100%; height:270px">
                                        </div>                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="slick/slick.min.js"></script>
</body>
</html>

